@model Tienda.Models.Marca
@{
    ViewData["Title"] = "Actualizar Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <h1 class="text-center my-4 text-info fw-bold">Actualizar Marca</h1>

    <form asp-action="Editar">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="row">
            <div class="col-lg-6 offset-lg-3 bg-white shadow p-3 rounded">
                <div class="mb-2">
                    <label asp-for="Nombre" class="form-label text-uppercase fw-bold text-muted"></label>
                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div>
                    <button class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i> Actualizar</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Regresar</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}


