@model IEnumerable<Tienda.Models.Categoria>    
@{
    ViewData["Title"] = "Lista Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <div class="row mt-4">
        <div class="col-12 col-md-6">
            <h1 class="fw-bold text-info">Lista Categorias</h1>
        </div>
        <div class="col-12 col-md-3 offset-md-1">
            <a asp-action="Crear" class="btn btn-success"><i class="fa-solid fa-plus"></i> Nueva Categorias</a>
        </div>
    </div>

    <div class="table-responsive-md mt-3">
        <table id="tblcategoria" class="table table-striped w-100">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(c => c.Nombre)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/categoria.js"></script>
}

